{
  "configurations": [
    {
      "name": "Debug linux",
      "type": "gdb",
      "request": "launch",
      "target": "${workspaceRoot}/bin/dbg-linux/run",
      "cwd": "${workspaceRoot}/bin/dbg-linux/",
      "valuesFormatting": "parseText",
      "env": {
        "LD_LIBRARY_PATH": "/usr/local/lib64/:${env:LD_LIBRARY_PATH}",
        "ROOT_DIR": "${workspaceRoot}/root"
      }
    },
    {
      "name": "Debug mac",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/bin/mac/main",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb"
    },
    {
      "name": "Debug windows",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/win/main.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": false,
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/linux/main",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}